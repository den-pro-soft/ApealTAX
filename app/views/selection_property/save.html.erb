<section class="body">
	<div class="row">
		<div class="col">
		<%= form_tag({:action => 'contract'}, {:method => 'POST'}) do %>
			<section class="card form-wizard" id="w4">
				<div class="card-body">
					<div class="wizard-progress wizard-progress-lg">
						<div class="steps-progress">
							<div class="progress-indicator"></div>
						</div>
						<ul class="nav wizard-steps">
							<li class="nav-item ">
								<a class="nav-link" href="#w4-property" data-toggle="tab"><span>1</span>Select Property</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#w4-confirm" data-toggle="tab"><span>2</span>Confirm Data</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#w4-sales" data-toggle="tab"><span>3</span>Sales Info</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#w4-exemption" data-toggle="tab"><span>4</span>Exemptions</a>
							</li>
							<li class="nav-item active">
								<a class="nav-link" href="#w4-save" data-toggle="tab"><span>5</span>Save Property</a>
							</li>
						</ul>
					</div>
					<div class="tab-content">
						<div id="w4-save" class="tab-pane active">
							<div class="col-lg-12">
								<section class="card">
									<h2 class="card-title">Save property details</h2>
									<div class="card-body">
										<div class="form-group row">
											<label class="col-sm-3 control-label ">First Name <span class="required">*</span></label>
											<div class="col-sm-12">
												<%= text_field_tag :first_name, "", placeholder: "abc", value: session[:contract_data] ? session[:contract_data]['first_name'] : '', class: 'form-control' %>
											</div>
										</div>
										<div class="form-group row">
											<label class="col-sm-3 control-label ">Last Name <span class="required">*</span></label>
											<div class="col-sm-12">
												<%= text_field_tag :last_name, "", placeholder: "abc", value: session[:last_name] ? session[:contract_data]['last_name'] : '', class: 'form-control' %>
											</div>
										</div>
										<div class="form-group row">
											<label class="col-sm-6 control-label ">If property is owned by a Company</label>
											<div class="col-sm-12">
												<%= text_field_tag :company, "", placeholder: "Company Name", value: session[:company] ? session[:contract_data]['company'] : '', class: 'form-control' %>
											</div>
										</div>
									</div>
								</section>
							</div>
						</div>
					</div>
				</div>
				<div class="card-footer">
					<ul class="col-lg-6">
						<li class="previous disabled" id = "button_previous">
							<%= link_to 'Previous', { :action => :exemptions } , :class => "mb-1 mt-1 mr-1 btn btn-danger" %>
						</li>
						<li  id = "button_next">
							<%= submit_tag "Finish" ,:id=> "save_data" ,:class=>"mb-1 mt-1 mr-1 btn btn-success" %>
						</li>
					</ul>
				</div>
			</section>
			<% end %>
		</div>
	</div>
</section>